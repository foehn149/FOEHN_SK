<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_donation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="inc.thenewpirates.foehn.DonationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:gravity="center"
                android:onClick="donateprocess"
                android:text="@string/food"
                android:textSize="@dimen/textsizebig"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/food"
                android:src="@drawable/f" />

            <TextView
                android:id="@+id/orphan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:gravity="center"
                android:onClick="donateprocess"
                android:text="@string/orphan"
                android:textSize="@dimen/textsizebig"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageVieworphan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/orphan"
                android:src="@drawable/o" />

            <TextView
                android:id="@+id/education"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:gravity="center"
                android:onClick="donateprocess"
                android:text="@string/education"
                android:textSize="@dimen/textsizebig"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageVieweducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/education"
                android:src="@drawable/e"/>

            <TextView
                android:id="@+id/health"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:gravity="center"
                android:onClick="donateprocess"
                android:text="@string/health"
                android:textSize="@dimen/textsizebig"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewhealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/health"
                android:src="@drawable/h"/>

            <TextView
                android:id="@+id/naturalcalamities"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:gravity="center"
                android:onClick="donateprocess"
                android:text="@string/naturalcalamities"
                android:textSize="@dimen/textsizebig"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewnaturalcalamities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/naturalcalamities"
                android:src="@drawable/nc"/>

        </LinearLayout>
    </ScrollView>
</android.support.v7.widget.LinearLayoutCompat>
